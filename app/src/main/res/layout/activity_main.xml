<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/bg"
    android:padding="16dp">


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:fontFamily="@font/lexend"
        android:text="How old is your dog?"
        android:textColor="@color/textgreen"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:layout_marginTop="7sp"
        android:background="@drawable/rounder_corner"
        android:padding="5sp"
        android:fontFamily="@font/lexend"
        android:textAlignment="center"
        android:text="The Dog years app is a great way to calculate how old your dog is in human years."
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12sp"
        android:text="The year your Dog was born in"
        android:textColor="#283618"
        android:textSize="25sp"
        android:fontFamily="@font/lexend"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#606c38"
        android:fontFamily="@font/lexend"
        android:text="Select Date"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="📅 07/07/2007 📅"
        android:textColor="#283618"
        android:textSize="23sp"
        android:fontFamily="@font/lexend"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Selected Date"
        android:textColor="#283618"
        android:textSize="16sp"
        android:fontFamily="@font/lexend"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Age in human years is"
        android:textColor="#283618"
        android:textSize="22sp"
        android:fontFamily="@font/lexend"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="57"
        android:textColor="#283618"
        android:textSize="35sp"
        android:fontFamily="@font/lexend"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Dog Years"
        android:textColor="#283618"
        android:textSize="22sp"
        android:fontFamily="@font/lexend"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="🐶 This app was not dog tested ❤️"
        android:textColor="#283618"
        android:textSize="15sp"
        android:fontFamily="@font/lexend"
        android:textStyle="bold" />
</LinearLayout>